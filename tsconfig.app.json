{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@app/*" : ["src/app/*"],
      "@components/*" : ["src/app/components/*"],
      "@environments/*" : ["src/environments/*"],
      "@interfaces/*" : ["src/app/interfaces/*"]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
